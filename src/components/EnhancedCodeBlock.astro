---
// Enhanced code block styling and functionality
// This file contains CSS for better code block appearance
---

<style is:global>
  /* Enhanced code blocks */
  .prose pre {
    position: relative;
    background: linear-gradient(135deg, var(--color-muted) / 0.15, var(--color-muted) / 0.05);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    margin: 2rem 0;
    overflow-x: auto;
    font-family: 'JetBrains Mono', 'Fira Code', Consolas, monospace;
    font-size: 0.875rem;
    line-height: 1.6;
    box-shadow: 0 4px 12px var(--color-accent) / 0.05;
  }

  .prose pre:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent) / 0.5, var(--color-accent));
    border-radius: 12px 12px 0 0;
  }

  .prose pre code {
    background: transparent;
    padding: 0;
    border-radius: 0;
    font-size: inherit;
    color: inherit;
    font-weight: normal;
  }

  /* Language label */
  .prose pre[data-language]:before {
    content: attr(data-language);
    position: absolute;
    top: 0.75rem;
    right: 4rem;
    background: var(--color-accent) / 0.1;
    color: var(--color-accent);
    padding: 0.25rem 0.75rem;
    border-radius: 6px;
    font-size: 0.75rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Line numbers */
  .prose pre.line-numbers {
    padding-left: 3rem;
  }

  .prose pre.line-numbers code {
    counter-reset: line;
  }

  .prose pre.line-numbers code .line:before {
    counter-increment: line;
    content: counter(line);
    display: inline-block;
    position: absolute;
    left: 0;
    width: 2.5rem;
    text-align: right;
    color: var(--color-foreground) / 0.4;
    font-weight: normal;
    user-select: none;
  }

  /* Copy button improvements */
  .copy-code {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: var(--color-background) / 0.9;
    border: 1px solid var(--color-border);
    color: var(--color-foreground);
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    backdrop-filter: blur(10px);
    opacity: 0;
    transform: translateY(-5px);
  }

  .copy-code:hover {
    background: var(--color-accent);
    color: var(--color-background);
    border-color: var(--color-accent);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--color-accent) / 0.3;
  }

  .copy-code.copied {
    background: var(--color-accent);
    color: var(--color-background);
    border-color: var(--color-accent);
  }

  .prose pre:hover .copy-code {
    opacity: 1;
    transform: translateY(0);
  }

  /* Inline code improvements */
  .prose code:not(pre code) {
    background: var(--color-accent) / 0.1;
    color: var(--color-accent);
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.9em;
    font-weight: 500;
    border: 1px solid var(--color-accent) / 0.2;
    font-family: 'JetBrains Mono', 'Fira Code', Consolas, monospace;
  }

  /* Terminal/command styling */
  .prose pre.terminal {
    background: #1a1a1a;
    color: #00ff00;
    border: 2px solid #333;
  }

  .prose pre.terminal:before {
    background: linear-gradient(90deg, #00ff00, #00aa00);
  }

  .prose pre.terminal code {
    color: #00ff00;
  }

  /* Diff styling */
  .prose pre.diff .line.added {
    background: rgba(34, 197, 94, 0.1);
    border-left: 3px solid #22c55e;
    padding-left: 0.5rem;
    margin-left: -0.5rem;
  }

  .prose pre.diff .line.removed {
    background: rgba(239, 68, 68, 0.1);
    border-left: 3px solid #ef4444;
    padding-left: 0.5rem;
    margin-left: -0.5rem;
  }

  /* Mobile optimizations */
  @media (max-width: 768px) {
    .prose pre {
      margin: 1.5rem -1rem;
      border-radius: 0;
      font-size: 0.8rem;
      padding: 1rem;
    }

    .prose pre[data-language]:before {
      top: 0.5rem;
      right: 3rem;
      font-size: 0.7rem;
    }

    .copy-code {
      top: 0.5rem;
      right: 0.5rem;
      padding: 0.375rem 0.5rem;
      font-size: 0.7rem;
    }

    .prose pre.line-numbers {
      padding-left: 2.5rem;
    }

    .prose pre.line-numbers code .line:before {
      width: 2rem;
      font-size: 0.75rem;
    }
  }

  /* Dark theme adjustments */
  html[data-theme="dark"] .prose pre {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
    border-color: var(--color-border);
  }

  html[data-theme="dark"] .copy-code {
    background: var(--color-background) / 0.8;
    border-color: var(--color-border);
  }

  html[data-theme="dark"] .copy-code:hover {
    background: var(--color-accent);
    color: var(--color-background);
  }

  /* Print styles */
  @media print {
    .copy-code {
      display: none !important;
    }
    
    .prose pre {
      background: #f8f9fa !important;
      border: 1px solid #dee2e6 !important;
      color: #212529 !important;
      font-size: 0.8rem !important;
      overflow: visible !important;
      white-space: pre-wrap !important;
    }
    
    .prose pre:before {
      display: none !important;
    }
  }
</style>
